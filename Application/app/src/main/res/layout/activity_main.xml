<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/READ2U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"

        android:fontFamily="sans-serif"
        android:text="READ2U"
        android:textColor="@color/whitePerl"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Enter"
        android:layout_width="186dp"
        android:layout_height="188dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/mitr"
        android:text="เข้าสู่      การทำงาน"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/READ2U" />

    <Button
        android:id="@+id/bt_toHelp"
        android:layout_width="85dp"
        android:layout_height="96dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/whitePerl"
        android:fontFamily="@font/mitr"
        android:text="วิธีใช้"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Enter" />

</androidx.constraintlayout.widget.ConstraintLayout>